  WIFE
  FATHER
  MOTHER
  DAUGHTER
  SON
}

enum CustomerType {
  RETAIL
  AGENCY
}

enum CommodityUnit {
  KG
  CON
}

enum ProductUnit {
  LIT
  KG
  BAO
  VIEN
  ORTHER
}

