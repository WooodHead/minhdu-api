model Application {
  id   Int     @id @default(autoincrement())
  name String
  app  AppEnum
  link String
  icon String
}

// end admin

model SystemHistory {
  id          Int       @id @default(autoincrement())
  appName     AppEnum
  name        String
  activity    String
  description String?
  ip          String?
  body        String?
  param       String?
  createdAt   DateTime? @default(now())
}

